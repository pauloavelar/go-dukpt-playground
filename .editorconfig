# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project
# See https://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 4
max_line_length = 140

[*.md]
max_line_length = 100
